{# templates/home/home.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:opsz,wght@8..60,600&display=swap" rel="stylesheet"/>
<link rel="stylesheet" type="text/css" href="{{ asset('styles/styles.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('styles/home.css') }}">
{% endblock %}

{% block title %}Series de {{ genero }} {% endblock %}

{% block body %}
    <!-- NAVBAR: -->
    <nav class="navbar navbar-expand-lg d-flex">
      <div class="container-fluid">
        <!-- ICONO: -->
        <a class="navbar-brand" href="#">
          <img src="{{ asset('img/icons/SerieSphere.gif') }}" alt="Serie Sphere" title="SerieSphere" class="logo-pagina">
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
          id="button-collapse"
          onclick="hidePfp();"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="{{ path('home') }}">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('perfil') }}">Perfil</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href=""
                >Lista de Seguimiento</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="">Destacados</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="">Buscar</a>
            </li>
          </ul>
        </div>
        <div class="dropdown">
          <img
            class="user-pfp dropdown-toggle"
            src="{{ asset('img/monke-pfp.png') }}"
            alt="user pfp"
            id="user-pfp"
            type="button"
            data-bs-toggle="dropdown"
          />
          <ul class="dropdown-menu">
            <li>
              <a class="dropdown-item" href=""
                >Ajustes<i class="bi bi-gear-wide-connected"></i
              ></a>
            </li>
            <li>
              <a class="dropdown-item" href="{{ path('app_logout') }}"
                >Cerrar Sesión<i class="bi bi-box-arrow-left"></i
              ></a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- SECCIÓN VIENDO: -->
    <section class="contenedor-pagina">
      <h1 class="titulo-pagina">Show series: {{ genero }}</h1>
      <div class="flex-container viendo-container">

        <!-- TODO: where lista = series_viendo -->
        {% for serie in array_series %}
        <div>
          <a href="{{ path('mostrar_serie_id', {'id': serie.id}) }}">
            <img
                src="{{ asset(serie.posterSrc) }}"
                class="card-img-top"
                alt="..."
            />
          </a>
        </div>
        {% endfor %}

      </div>
    </section>

    <!-- Pie de pagina (footer) -->
    <footer>
      <div class="footer-container">
        <div class="footer-nav">
          <ul>
            <li class="footer-decor">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                height="5"
                viewBox="0 0 80 6"
                fill="none"
              >
                <path
                  d="M0 3H80"
                  stroke="url(#paint0_linear_44_98)"
                  stroke-opacity="0.8"
                  stroke-width="500"
                />
                <defs>
                  <linearGradient
                    id="paint0_linear_44_98"
                    x1="41.0833"
                    y1="3.00193"
                    x2="37.9583"
                    y2="3.00193"
                    gradientUnits="userSpaceOnUse"
                  >
                    <stop offset="0.168213" stop-color="#71DF7C" />
                    <stop offset="0.858244" stop-color="white" />
                  </linearGradient>
                </defs>
              </svg>
            </li>
            <li><a href="">Sobre Nosotros</a></li>
            <li><a href="">Ayuda</a></li>
            <li><a href="">API</a></li>
            <li><a href="">Términos</a></li>
            <li><a href="">Contacto</a></li>
            <li><a>━━</a></li>
            <li>
              <a href=""><i class="social bi bi-twitter-x"></i></a>
            </li>
            <li>
              <a href=""><i class="social bi bi-instagram"></i></a>
            </li>
            <li>
              <a href=""><i class="social bi bi-youtube"></i></a>
            </li>
            <li class="footer-decor">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                height="5"
                viewBox="0 0 80 6"
                fill="none"
              >
                <path
                  d="M0 3H80"
                  stroke="url(#paint0_linear_44_98)"
                  stroke-opacity="0.8"
                  stroke-width="500"
                />
                <defs>
                  <linearGradient
                    id="paint0_linear_44_98"
                    x1="41.0833"
                    y1="3.00193"
                    x2="37.9583"
                    y2="3.00193"
                    gradientUnits="userSpaceOnUse"
                  >
                    <stop offset="0.168213" stop-color="#71DF7C" />
                    <stop offset="0.858244" stop-color="white" />
                  </linearGradient>
                </defs>
              </svg>
            </li>
          </ul>
        </div>
      </div>
    </footer>

{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="{{ asset('app.js') }}"></script>
{% endblock %}